<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <include layout="@layout/comment_title_layout"/>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/commTitleLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6174C0"
                android:orientation="vertical">


                <include layout="@layout/include_date_switch_layout"/>


                <RatingBar
                    android:id="@+id/detailSleepQuitRatingBar"
                    style="@style/CusSleepRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_10"
                    android:isIndicator="true"
                    android:max="5" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_height="wrap_content">

                    <com.feiniu.lifeai.view.widget.BraceCusSleepView
                        android:id="@+id/detailCusSleepView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_180"
                        android:layout_marginRight="@dimen/size_15"
                        android:layout_marginLeft="@dimen/size_15"
                        app:awakeSleepColor="#fcd647"
                        app:deepSleepColor="#2D468A"
                        app:b30SleepNoDataColor="#FFFFFF"
                        android:layout_gravity="center"
                        app:lightSleepColor="#8898E6"
                        app:sleepEmptyData="@dimen/sp_15" />


                    <SeekBar
                        android:id="@+id/sleepSeekBar"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:progressDrawable="@drawable/seekbar_bg"
                        android:thumb="@null"
                        android:layout_marginRight="@dimen/size_15"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_height="@dimen/size_180" />



                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/startSleepTimeTv"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:id="@+id/endSleepTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/size_10"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_sleep_sleep_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="3dp"
                        android:text="@string/string_sleep_time"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_sleep_awake" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="3dp"
                        android:text="@string/string_recovery_count"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/detailAllSleepTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="--"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/detailAwakeNumTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="--"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/chang_white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_sleep_sleep_down_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="3dp"
                        android:text="@string/sleep_asleep"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_sleep_sleep_up_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="3dp"
                        android:text="@string/string_recovery_time"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/detailStartSleepTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="--"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/detailAwakeTimeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="--"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/chang_white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_sleep_deep" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="3dp"
                        android:text="@string/string_deep_sleep"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_sleep_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="3dp"
                        android:text="@string/string_shallow_sleep"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/detailDeepTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="--"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/detailHightSleepTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="--"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/chang_white" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>